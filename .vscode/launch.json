{
  
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Chrome",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/www",
      "serverReadyAction":  {
        "pattern":"listening on port ([0-9]+)",
        "uriFormat": "http://localhost:%s/api/v1/books",
        "action": "openExternally"
      }
    }
  ]
}